<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:top="@dimen/dropshadow_size" android:left="@dimen/dropshadow_size" android:bottom="0dp" android:right="0dp">
	    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
	    <solid android:color="@color/shadowgreen" />
	    
	    <stroke android:width="0dp" android:color="#447F7F7F" />
	   
	     <corners 
		  android:bottomRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/corner_radius" 
		  android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="@dimen/corner_radius"/> 
		</shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:bottom="@dimen/dropshadow_size" android:right="@dimen/dropshadow_size">
	    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
	    <solid android:color="@color/white" />
	    
	    <stroke android:width="0dp" android:color="#447F7F7F" />
	   
	     <corners 
		  android:bottomRightRadius="@dimen/corner_radius" android:bottomLeftRadius="@dimen/corner_radius" 
		  android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="@dimen/corner_radius"/> 
		</shape>
    </item>
    
   
    
     <item android:top="0dp" android:left="0dp" android:bottom="@dimen/heading_area" android:right="@dimen/dropshadow_size">
	    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
	    <solid android:color="@color/green3" />
	    
	    <stroke android:width="0dp" android:color="#447F7F7F" />
	   
	    <corners 
		  android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" 
		  android:topLeftRadius="@dimen/corner_radius" android:topRightRadius="@dimen/corner_radius"/> 
		</shape>
    </item>
    
    

</layer-list>
